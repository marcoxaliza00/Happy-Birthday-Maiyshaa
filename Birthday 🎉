  <script>
    // ------------------ CONFIG ------------------
    // If you want to pre-fill a portrait image url, set portraitSrc to a public image link
    const portraitSrc = '';
    const audioSrc = ''; // paste an mp3 link if you have one
    // ---------------------------------------------

    if(portraitSrc) document.getElementById('portraitImg').src = portraitSrc;
    if(audioSrc) document.getElementById('bgAudio').src = audioSrc;

    // Intro behavior
    const intro = document.getElementById('intro');
    document.getElementById('enterBtn').addEventListener('click', ()=>{intro.style.display='none';runConfetti(40)});

    // QUIZ QUESTIONS (12 funny / roast-style)
    const questions = [
      "Kya tum cake ka last piece chhupane ki aadat rakhte ho?",
      "Kya tum birthday par alarm set karke khud ko surprise karte ho?",
      "Kya tum frontal camera se 100 selfies leke 5 hi post karte ho?",
      "Kya tum party me sabse zyada dance karne wala ho?",
      "Kya tum gifts open karte hue jaldi karte ho?",
      "Kya tum age batate huay thoda kam bol dete ho?",
      "Kya tum fridge me cake rakhne ke baad hi shaadi ka plan tay karte ho?",
      "Kya tum birthday pe mostly phone pe memes bhejte ho?",
      "Kya tum cake se pehle 'I won't eat' bolte ho phir pura cake kha lete ho?",
      "Kya tum party me DJ ko sirf requests bhejte ho?",
      "Kya tum birthday selfies ke liye lighting check karte ho 10 bar?",
      "Kya tum cake pe candle bujhane se pehle wish 3 dafa change karte ho?"
    ];

    const quizEl = document.getElementById('quiz');
    let answers = new Array(questions.length).fill(null);

    function renderQuiz(){
      quizEl.innerHTML = '';
      questions.forEach((q, i)=>{
        const qWrap = document.createElement('div'); qWrap.className='q';
        const h = document.createElement('h3'); h.textContent = (i+1)+'. '+q; qWrap.appendChild(h);
        const opts = document.createElement('div'); opts.className='opts';
        const yes = document.createElement('button'); yes.className='btn yes'; yes.textContent='YES';
        const no = document.createElement('button'); no.className='btn no'; no.textContent='NO';
        yes.addEventListener('click', ()=>{answers[i]=true; updateUI();});
        no.addEventListener('click', ()=>{answers[i]=false; updateUI();});
        opts.appendChild(yes); opts.appendChild(no); qWrap.appendChild(opts);
        quizEl.appendChild(qWrap);
      });
      updateUI();
    }

    function updateUI(){
      // highlight selected
      const qs = quizEl.querySelectorAll('.q');
      qs.forEach((el, i)=>{
        const yes = el.querySelector('.yes'), no = el.querySelector('.no');
        if(answers[i]===true){ yes.style.boxShadow='0 8px 18px rgba(255,92,158,0.18)'; no.style.boxShadow='none'; }
        else if(answers[i]===false){ no.style.boxShadow='0 8px 18px rgba(255,209,102,0.18)'; yes.style.boxShadow='none'; }
        else { yes.style.boxShadow=no.style.boxShadow='none'; }
      });

      // calculate score (count of yes answers)
      const yesCount = answers.filter(v=>v===true).length;
      const answered = answers.filter(v=>v!==null).length;
      const result = document.getElementById('result');
      if(answered===questions.length){
        // final message
        let msg = '';
        if(yesCount>=9) msg = `Cake Master detected! ðŸ° You scored ${yesCount}/${questions.length}. Maiysha, this one will steal the cake.`;
        else if(yesCount>=5) msg = `Party Pro vibes â€” ${yesCount}/${questions.length}. Not bad!`;
        else msg = `Low-key mister/ma'am calm â€” ${yesCount}/${questions.length}. Share the cake peacefully.`;
        result.style.display='block'; result.innerHTML = '<strong>Quiz Result</strong><div style="margin-top:8px">'+msg+'</div>';
      } else {
        result.style.display='block'; result.innerHTML = '<strong>Quiz Progress</strong><div style="margin-top:8px">Answered '+answered+' of '+questions.length+'. Complete to see your result.</div>';
      }
    }

    renderQuiz();

    // restart & show answers (fun behavior)
    document.getElementById('restartBtn').addEventListener('click', ()=>{answers = new Array(questions.length).fill(null); renderQuiz(); window.scrollTo({top:0,behavior:'smooth'})});
    document.getElementById('showAnswersBtn').addEventListener('click', ()=>{
      // playful preset: randomly pick yes/no for fun
      answers = answers.map(()=>Math.random()>0.5);
      updateUI(); window.scrollTo({top:0,behavior:'smooth'});
    });

    // wishes
    const wishList = document.getElementById('wishList');
    document.getElementById('sendWish').addEventListener('click', addWish);
    document.getElementById('wishText').addEventListener('keydown', e=>{if(e.key==='Enter') addWish()});
    function addWish(){const v = document.getElementById('wishText').value.trim(); if(!v) return; const chip = document.createElement('div'); chip.style.padding='8px 10px'; chip.style.borderRadius='999px'; chip.style.background='linear-gradient(90deg, rgba(255,92,158,0.12), rgba(255,209,102,0.08))'; chip.style.fontSize='13px'; chip.textContent=v; wishList.prepend(chip); document.getElementById('wishText').value='';}

    // celebrate + confetti
    const confettiCanvas = document.getElementById('confettiCanvas'); const ctx = confettiCanvas.getContext('2d'); let pieces=[]; function resize(){confettiCanvas.width=innerWidth; confettiCanvas.height=innerHeight;} addEventListener('resize',resize); resize();
    function spawn(n=80){const cols=['#ff5c9e','#ffd166','#fff1f5','#ffe8cc','#ffd6e8']; for(let i=0;i<n;i++){pieces.push({x:Math.random()*confettiCanvas.width,y:-20+Math.random()*-200,w:6+Math.random()*12,h:6+Math.random()*6,rot:Math.random()*360,vr:Math.random()*8,c:cols[Math.floor(Math.random()*cols.length)],vx:(Math.random()-0.5)*4,vy:2+Math.random()*6})}}
    let raf=null; function loop(){ctx.clearRect(0,0,confettiCanvas.width,confettiCanvas.height); for(let i=pieces.length-1;i>=0;i--){const p=pieces[i]; p.x+=p.vx; p.y+=p.vy; p.vy+=0.08; p.rot+=p.vr; ctx.save(); ctx.translate(p.x,p.y); ctx.rotate(p.rot*Math.PI/180); ctx.fillStyle=p.c; ctx.fillRect(-p.w/2,-p.h/2,p.w,p.h); ctx.restore(); if(p.y>confettiCanvas.height+50) pieces.splice(i,1) } if(pieces.length>0) raf=requestAnimationFrame(loop); else{cancelAnimationFrame(raf); raf=null}};
    function runConfetti(n=120){spawn(n); if(!raf) loop();}
    document.getElementById('celebrateBtn').addEventListener('click', ()=>{runConfetti(160); playAudio();});

    // audio
    const audio = document.getElementById('bgAudio'); document.getElementById('playMusic').addEventListener('click', ()=>{if(!audio.src){alert('No audio configured. To add music, set `audioSrc` variable in the page.');return;} if(audio.paused){audio.play(); document.getElementById('playMusic').textContent='â¸ Pause Music';}else{audio.pause(); document.getElementById('playMusic').textContent='â–¶ Play Music'}})
    function playAudio(){ if(audio.src){ audio.play().catch(()=>{/* autoplay blocked */}); }}

    // small accessibility/focus
    setTimeout(()=>{document.getElementById('wishText').focus()},1200);

    // GitHub Pages friendly: nothing server-side required â€” just upload this file as index.html
    // Optional: automatically show intro for 2s then hide
    setTimeout(()=>{ /* keep intro until user clicks */ },2000);
  </script>
</body>
